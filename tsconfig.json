{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        /* Alias */
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*", "dist/*"]
        }
    }
}
